<?xml version="1.0" encoding="utf-8"?>
<!-- Usamos un layer-list para apilar dos formas y crear el efecto de doble borde -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa 1: Borde Exterior (Negro) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Fondo transparente -->
            <stroke
                android:width="2dp"
                android:color="@android:color/black" /> <!-- Borde negro -->
            <corners android:radius="20dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>

    <!-- Capa 2: Borde Interior y Fondo (Blanco y Azul) -->
    <!-- Se aplica un margen para que el borde negro exterior sea visible -->
    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <!-- Fondo principal del diÃ¡logo (color azul claro) -->
            <solid android:color="#B0C4DE" />
            <!-- Borde interior blanco -->
            <stroke
                android:width="3dp"
                android:color="@android:color/white" />
            <!-- El radio debe ser ligeramente menor que el del borde exterior -->
            <corners android:radius="18dp" />
        </shape>
    </item>

</layer-list>
